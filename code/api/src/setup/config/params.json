{
  "site": {
    "version": 0.1,
    "name": "HIRESMART",
    "domain": "hiresmart.app",
    "emails": {
      "help": {
        "name": "HIRESMART",
        "email": "help@hiresmart.app"
      },
      "hello": {
        "name": "HIRESMART",
        "email": "hello@hiresmart.app"
      }
    }
  },

  "endpoint": {
    "url": "/",
    "uploads": "/uploads"
  },

  "folder": {
    "uploads": "uploads"
  },

  "common": {
    "language": {
      "default": "en-US"
    },

    "message": {
      "error": {
        "default": "There was some error. Please try again.",
        "server": "There was some server error. Please try again.",
        "invalidData": "Invalid data provided."
      },
      "success": {
        "default": "Success."
      }
    }
  },

  "user": {
    "rules": {
      "nameMinLength": 3,
      "passwordMinLength": 6
    },

    "roles": {
      "admin": {
        "key": "admin",
        "title": "Admin"
      },
      "user": {
        "key": "user",
        "title": "User"
      }
    },

    "verification": {
      "signup": "signup",
      "password": "password"
    },

    "message": {
      "error": {
        "auth": "You are not allowed to perform this action."
      }
    }
  },

  "date": {
    "format": {
      "date": "YYYY-MM-DD",
      "time": "hh:mm a",
      "nice": {
        "date": "Do MMM",
        "time": "h:mm A"
      }
    }
  },

  "kanban": {
    "status": {
      "shortlisted": "shortlisted",
      "progress": "progress",
      "hold": "hold",
      "rejected": "rejected",
      "selected": "selected"
    },
    "columns": [
      { "key": "shortlisted", "name": "Shortlisted", "color": "grey", "help": "The candidate is considered for interview." },
      { "key": "progress", "name": "In Progress", "color": "blue", "help": "The candidate is currently under interview process." },
      { "key": "hold", "name": "On Hold", "color": "orange", "help": "On basis of interview feedback, the candidate is not yet rejected or selected." },
      { "key": "rejected", "name": "Rejected", "color": "red", "help": "The candidate profile was not suitable for the job opening." },
      { "key": "selected", "name": "Selected", "color": "green", "help": "THe candidate has successfully cleared the interview and is selected for the job opening." }
    ]
  },

  "interview": {
    "modes": [
      { "key": "telephonic", "name": "Telephonic" },
      { "key": "online", "name": "Online Video/Audio" },
      { "key": "f2f", "name": "Face to face" },
      { "key": "assignment", "name": "Assignment" }
    ]
  },

  "candidate": {
    "resume": {
      "path": "uploads"
    }
  },

  "web": {
    "routes": {
      "home": "/",
      "dashboard": "/dashboard",
      "invite": "/invite",
      "feedback": "/feedback"
    }
  },

  "activity": {
    "types": {
      "create": "create",
      "update": "update",
      "delete": "delete"
    }
  }
}
